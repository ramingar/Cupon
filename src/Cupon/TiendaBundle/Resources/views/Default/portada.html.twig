{% extends '::frontend.html.twig' %}

{% block title %}Tienda {{ tienda.nombre }}{% endblock %}
{% block id 'tienda' %}

{% block article %}
	<section id="descripcion">
		<h1>{{ tienda.nombre }}</h1>
		<p>{{ tienda.descripcion }}</p>
	</section>
	
	<section id="ultimas">
		<h2>Ãšltimas ofertas publicadas</h2>
		<table>
			<thead>
				<tr>
					<td>Fecha</td>
					<td>Oferta</td>
					<td>Precio</td>
					<td>Descuento</td>
					<td>Compras</td>
				</tr>
			</thead>
			<tbody>
				{% for oferta in ofertas %}
					<tr>
						<td>{{ oferta.fechaPublicacion | date() }}</td>
						<td>{{ oferta.nombre }}</td>
						<td>{{ oferta.precio }}</td>
						<td>{{ oferta.descuento }}</td>
						<td>{{ oferta.compras }}</td>
					</tr>
				{% else %}
                    <tr>
                        <td colspan="5">Esta tienda no ha publicado ninguna oferta</td>
                    </tr>
                {% endfor %}
			</tbody>
		</table>
	</section>
{% endblock %}

{% block aside %}
	<section id="cercanas">
		<h2>Otras tiendas en: {{ tienda.ciudad.nombre }}</h2>
		<ul>
			{% for tienda in cercanas %}
				<li>
					<a href="{{ path('tienda_portada', {'ciudad': tienda.ciudad.slug, 'tienda': tienda.slug}) }}">
						{{ tienda.nombre }}
					</a>
				</li>
			{% endfor %}
		</ul>
	</section>
{% endblock %}